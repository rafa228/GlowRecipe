<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp">

    <TextView
        android:id="@+id/recipe_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Masak Apa Hari Ini ???"
        android:textStyle="bold"
        android:textSize="22sp"
        android:textColor="#000"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>

    <TextView
        android:id="@+id/finder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_title"
        android:text="Yuk cari resep khas hari ini, contoh : EGG"
        android:textSize="14sp"
        android:textColor="#000"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>

    <EditText
        android:id="@+id/field_find"
        android:layout_below="@+id/finder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Kata Pencarian ..."
        android:textColor="#000"
        android:inputType="textCapWords"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"/>

    <Button
        android:id="@+id/submit"
        android:layout_below="@id/field_find"
        android:layout_width="118dp"
        android:layout_height="40dp"
        android:layout_marginTop="16dp"
        android:layout_alignRight="@id/field_find"
        android:textColor="#FFFFFF"
        android:background="#0cc7a8"
        android:text="CARI"
        android:layout_marginRight="15dp"
        android:paddingLeft="12dp"
        android:paddingRight="12dp"
        android:layout_marginBottom="30dp"/>

</RelativeLayout>